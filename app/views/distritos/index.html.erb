

<div class="categdespesas index">
      <h2>Distritos </h2>
    <%= form_tag distritos_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
              <div class="col-lg-5  form-group">  
                <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome para pesquisar" %>  
              </div>
              <div class="col-lg-2 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
              </div>
            
              <div class="col-lg-2 form-group">  
                  <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_distrito_path %>';"><i class="fa fa-plus-circle"></i> Novo Distrito</button></span>
            </div>
        </div>
      </div>
    </div>
  <% end  %>  
 
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
      <tr>
      <th>COD</th>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @distritos.each do |distrito| %>
      <tr>
        <td><%= "%06d"%distrito.id %></td>
        <td><%= distrito.nome %></td>
        <td><%= link_to 'Visualizar', distrito %></td>
        <td><%= link_to 'Alterar', edit_distrito_path(distrito) %></td>   
        <td><%= link_to 'Excluir', distrito, class: 'remove-tag', data: { turbo_method: :delete, turbo_confirm: 'Deseja excluir o distrito?' } %></td>
      </tr>
    <% end %>
      </tbody>
  </table>
</div>

<%= paginate @distritos %>

</div>