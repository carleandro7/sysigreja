


<div class="igreja form">

  <%= form_with(model: igreja, local: true) do |form| %>
       <% if igreja.errors.any? %>

         <div id="error_explanation" class="panel panel-danger mensagem-erro-cabecalho">
           <div class="panel-heading">
               <h3 class="panel-title"><%= pluralize(igreja.errors.count, "error(s)") %> ao salvar:</h3>
            </div>
           <div class="panel-body">
             <ul>
             <% igreja.errors.full_messages.each do |message| %>
               <li><%= message %></li>
             <% end %>
             </ul>
           </div>
         </div>
       <% end %>
    
    <div class="row">
       <div class="col-lg-6 form-group">   
           <%= form.label :nome, :class => 'control-label required' %>
           <%= form.text_field :nome,  :class => 'form-control' %>
       </div>
       <div class="col-lg-5 form-group">
        <%= form.label :distrito_id, class: "control-label required" %>
        <%= form.collection_select :distrito_id, listDistritosAll.all, :id, :nome, { prompt: "Selecionar" }, { class: "form-control", required: true } %>
      </div>

       
    </div>

    
      <div class="row">
          <div class="col-lg-3 form-group">  
            <input type="submit" name="commit" class="btn btn-primary colorprimarybtn" value="Salvar" data-disable-with="Salvando" />
           </div>
          <div class="col-lg-3 form-group">      
            <%= link_to 'Voltar', igrejas_path, :class => "btn btn-primary colorprimarybtn"%>
          </div>
      </div>
   <% end %>                         
</div>
