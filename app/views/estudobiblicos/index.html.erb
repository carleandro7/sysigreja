
<div class="categdespesas index">
      <h2>Tipos de Estudo Bíblicos </h2>
    <%= form_tag estudobiblicos_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
              <div class="col-lg-5  form-group">  
                <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome para pesquisar" %>  
              </div>
              <div class="col-lg-2 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
              </div>
            
              <div class="col-lg-2 form-group">  
                  <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_estudobiblico_path %>';"><i class="fa fa-plus-circle"></i> Nova Tipo</button></span>
            </div>
        </div>
      </div>
    </div>
  <% end  %>  
 
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
      <tr>
      <th>COD</th>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estudobiblicos.each do |estudobiblico| %>
      <tr>
        <td><%= "%06d"%estudobiblico.id %></td>
        <td><%= estudobiblico.nome %></td>
        <td><%= link_to 'Visualizar', estudobiblico %></td>
        <td><%= link_to 'Alterar', edit_estudobiblico_path(estudobiblico) %></td>   
        <td><%= link_to 'Excluir', estudobiblico, class: 'remove-tag', data: { turbo_method: :delete, turbo_confirm: 'Deseja excluir o tipo de estudo bíblico?' } %></td>
      </tr>
    <% end %>
      </tbody>
  </table>
</div>

<%= paginate @estudobiblicos %>

</div>