


<div class="categdespesas index">
      <h2>Estudos Ministrados </h2>
    <%= form_tag ministroubiblicos_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
              <div class="col-lg-5  form-group">  
                <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome para pesquisar" %>  
              </div>
              <div class="col-lg-2 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
              </div>
            
              <div class="col-lg-2 form-group">  
                  <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_ministroubiblico_path %>';"><i class="fa fa-plus-circle"></i> Novo Estudo Ministrado</button></span>
            </div>
        </div>
      </div>
    </div>
  <% end  %>  
 
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
      <tr>
      <th>COD</th>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ministroubiblicos.each do |ministroubiblico| %>
      <tr>
        <td><%= "%06d"%ministroubiblico.id %></td>
        <td><%= ministroubiblico.estudobiblico.nome %></td>
        <td><%= ministroubiblico.itemestudobiblico.descricao %></td>
        <td><%= ministroubiblico.user.nome %></td>
        <td><%= ministroubiblico.data.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Visualizar', ministroubiblico %></td>
        <td><%= link_to 'Alterar', edit_ministroubiblico_path(ministroubiblico) %></td>   
        <td><%= link_to 'Excluir', ministroubiblico, class: 'remove-tag', data: { turbo_method: :delete, turbo_confirm: 'Deseja excluir o estudo ministrado?' } %></td>
      </tr>
    <% end %>
      </tbody>
  </table>
</div>



</div>